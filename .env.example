# ============================================
# PRODUCTION ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to git!

# ============================================
# DOMAIN CONFIGURATION
# ============================================
API_DOMAIN=api.yourdomain.com
FRONTEND_DOMAIN=app.yourdomain.com
OLLAMA_UI_DOMAIN=ollama.yourdomain.com  # Optional: Ollama WebUI

# Let's Encrypt Email
ACME_EMAIL=your-email@example.com

# ============================================
# DATABASE CONFIGURATION
# ============================================
DB_NAME=taskmanager
DB_USER=taskuser
DB_PASSWORD=your-secure-password-here-change-this

# ============================================
# DJANGO CONFIGURATION
# ============================================
DJANGO_SECRET_KEY=your-super-secret-key-min-50-chars-change-in-production-xyz123
DEBUG=False
ALLOWED_HOSTS=api.yourdomain.com,localhost,127.0.0.1

# CORS - Allow frontend to access API
CORS_ALLOWED_ORIGINS=https://app.yourdomain.com,http://localhost:5173

# ============================================
# AWS COGNITO CONFIGURATION
# ============================================
COGNITO_USER_POOL_ID=us-east-1_xxxxxxxxx
COGNITO_REGION=us-east-1
COGNITO_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxxxxxxx

# ============================================
# OLLAMA CONFIGURATION
# ============================================
# Recommended models for MacBook Pro i5:
# - llama3.2:3b (3B params, fast, good quality) - RECOMMENDED
# - llama3.2:1b (1B params, very fast, lighter quality)
# - phi3:mini (3.8B params, good reasoning)
# - mistral:7b (7B params, slower but better quality)
# - qwen2.5:3b (3B params, multilingual)

OLLAMA_MODEL=llama3.2:3b

# ============================================
# OPTIONAL: EXTERNAL AI API KEYS (FALLBACK)
# ============================================
# Leave empty if using only Ollama
ANTHROPIC_API_KEY=
OPENAI_API_KEY=

# ============================================
# AWS CONFIGURATION (for S3 frontend deployment)
# ============================================
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET=task-manager-frontend
CLOUDFRONT_DISTRIBUTION_ID=E1234567890ABC
